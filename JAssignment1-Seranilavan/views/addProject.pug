doctype html
html
  head
    title Add Project
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
      }
      .container {
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        width: 420px;
      }
      h1 {
        text-align: center;
        color: #333;
        margin-bottom: 15px;
      }
      label {
        display: block;
        margin-top: 12px;
        font-weight: bold;
        color: #555;
      }
      input, textarea {
        width: 100%;
        padding: 12px;
        margin-top: 6px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 15px;
        background-color: #fff;
      }
      textarea {
        height: 100px;
        resize: vertical;
      }
      button {
        width: 100%;
        padding: 12px;
        margin-top: 18px;
        background: #28a745;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 17px;
        font-weight: bold;
        cursor: pointer;
        transition: background 0.3s;
      }
      button:hover {
        background: #218838;
      }
  body
    .container
      h1 Add Project
      form(action="/admin/projects/add" method="POST")
        label(for="name") Project Name:
        input(type="text" name="name" required placeholder="Enter project name")

        label(for="description") Description:
        textarea(name="description" placeholder="Describe your project")

        label(for="technologies") Technologies:
        input(type="text" name="technologies" placeholder="e.g., HTML, CSS, JavaScript")

        label(for="link") Project Link:
        input(type="url" name="link" placeholder="https://example.com")

